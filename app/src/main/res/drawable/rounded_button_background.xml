<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="[http://schemas.android.com/apk/res/android](http://schemas.android.com/apk/res/android)">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#2980B9" /> <!-- Darker blue when pressed -->
            <corners android:radius="16dp" />
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3498DB" /> <!-- Regular blue -->
            <corners android:radius="16dp" />
            <padding android:left="20dp" android:right="20dp" android:top="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>
